<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriverController</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriverController</servlet-name>
        <url-pattern>/driver/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllDriversController</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDriversController</servlet-name>
        <url-pattern>/driver/all-drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createManufacturerController</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturerController</servlet-name>
        <url-pattern>/manufacturer/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllManufacturersController</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturersController</servlet-name>
        <url-pattern>/manufacturer/all-manufacturers</url-pattern>
    </servlet-mapping>

</web-app>
